{
    "include-v-in-tag": true,
    "tag-separator": "@",
    "always-link-local": true,
    "packages":{
        "packages/hello-world-util": {  
            "component": "pkgHelloWorldUtil",                     
            "release-type": "node",            
            "changelog-path": "CHANGELOG.md",
            "extra-files": [
               "package-lock.json"
            ]
        },
        "starters/nestjs-startup-app": {
            "component": "pkgNestjsStartupApp",
            "release-type": "node",
            "changelog-path": "CHANGELOG.md",
            "extra-files": [
                "package-lock.json"
            ]
        }
    },
    "plugins":[
        {
            "type": "node-workspace",
            "updateAllPackages": true,
            "updatePeerDependencies": true
        },
        {
            "type": "linked-versions",
            "groupName": "linked-group",
            "components": ["pkgHelloWorldUtil", "pkgNestjsStartupApp"]
        }
    ],
    "$schema": "https://raw.githubusercontent.com/googleapis/release-please/main/schemas/config.json"
  }
  